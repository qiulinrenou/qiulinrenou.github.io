@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"

/* ===== Gallery grid (4:3 + title/date) ===== */
.gallery-grid
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr))
  gap: 14px
  margin: 1rem 0

.gallery-card
  margin: 0
  border: 1px solid #eee
  border-radius: 6px
  overflow: hidden
  background: #fff

.gallery-link
  display: block

.gallery-link img
  width: 100%
  aspect-ratio: 4 / 3
  object-fit: cover
  display: block
  background: #f3f3f3

.gallery-meta
  padding: 10px 10px 12px

.gallery-title
  font-size: 14px
  font-weight: 600
  line-height: 1.3
  color: #333

.gallery-date
  margin-top: 4px
  font-size: 12px
  color: #888

.gallery-desc
  margin-top: 6px
  font-size: 12px
  color: #666
  line-height: 1.4

/* ===== Phone + Tablet: always 3 columns ===== */
@media (max-width: 1024px)
  .gallery-grid
    grid-template-columns: repeat(3, 1fr)
    gap: 8px

  .gallery-meta
    padding: 6px 6px 8px

  .gallery-title
    font-size: 12px
    line-height: 1.2

  .gallery-date,
  .gallery-desc
    font-size: 11px

  // 如果手机/平板觉得描述占位置，取消注释：
