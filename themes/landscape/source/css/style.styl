@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"

/* ===== Album (folder-like, collapsible) ===== */
.album
  margin: 1rem 0 1.5rem

.album-details
  border: 1px solid #eee
  border-radius: 8px
  background: #fff

// summary 行：像文件夹标题条
.album-header
  cursor: pointer
  user-select: none
  margin: 0
  padding: .6rem .8rem
  display: flex
  align-items: flex-start
  gap: .4rem

// 隐藏���览器自带的 marker（不同内核不同写法）
.album-header::-webkit-details-marker
  display: none

.album-header::marker
  content: ""

// 我们自己的箭头
.album-arrow
  width: 1.2em
  flex: 0 0 1.2em
  color: #888

.album-arrow:before
  content: "▸"

.album-details[open] .album-arrow:before
  content: "▾"

.album-header-text
  display: flex
  flex-direction: column
  min-width: 0

.album-title
  font-size: 16px
  font-weight: 700
  color: #333

.album-date
  margin-top: 4px
  font-size: 12px
  color: #888

.album-desc
  margin-top: 6px
  font-size: 12px
  color: #666
  line-height: 1.4

// 展开内容区域内边距
.album-details > .gallery-grid
  padding: 0 .8rem .8rem
  padding: 0 .8rem .8rem

/* ===== Gallery grid (4:3) ===== */
.gallery-grid
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr))
  gap: 14px
  margin: 0

.gallery-card
  margin: 0
  border: 1px solid #eee
  border-radius: 6px
  overflow: hidden
  background: #fff

.gallery-link
  display: block

.gallery-link img
  width: 100%
  aspect-ratio: 4 / 3
  object-fit: cover
  display: block
  background: #f3f3f3

/* ===== Phone + Tablet: always 3 columns ===== */
@media (max-width: 1024px)
  .gallery-grid
    grid-template-columns: repeat(3, 1fr)
    gap: 8px